{
  "name": "ignite-design-system",
  "version": "0.4.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng-packagr -p package.json",
    "build:demo": "ng build",
    "build:watch": "chokidar 'src/**/*.ts' -c './bin/build' --initial",
    "package": "tar cvf $npm_package_name-$npm_package_version.tgz manifest-* Staticfile dist-demo",
    "lint": "tslint --project tsconfig.json src/**/*.ts",
    "test": "jest --json --outputFile=test/jest-output.json",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "ci:test": "npm run test:ci",
    "ci:package": "npm run build && npm run build:demo && npm prune --production && npm run package"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest.ts",
    "moduleNameMapper": null,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.ts",
      "<rootDir>/src/jest-global-mocks.ts",
      "<rootDir>/src/jest.ts",
      "<rootDir>/src/tsconfig.spec.json",
      "<rootDir>/test/*"
    ],
    "coverageReporters": ["json-summary", "text", "lcov"]
  },
  "ngPackage": {
    "lib": {
      "entryFile": "./src/index.ts",
      "externals": {
        "@angular/material": "ng.material",
        "rxjs": "Rx",
        "rxjs/operators": "Rx.Observable.prototype"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "http://devgit.dev.us.corp:7990/projects/NUI/repos/ignite-design-system"
  },
  "publishConfig": {
    "registry": "http://artifactory.mia.ucloud.int/artifactory/api/npm/npm-local"
  },
  "author": {
    "name": "Derek Stobbe",
    "email": "derek_stobbe@ultimatesoftware.com"
  },
  "keywords": [
    "angular"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "http://devgit.dev.us.corp:7990/projects/NUI/repos/ignite-design-system/issues"
  },
  "dependencies": {
    "apollo-angular": "^1.0.1",
    "apollo-angular-link-http": "^1.0.2-beta.0",
    "apollo-cache-inmemory": "^1.1.7",
    "apollo-client": "^2.2.2",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1"
  },
  "peerDependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/cdk": "^5.0.0-rc0",
    "@angular/common": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.0.0-rc0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "rxjs": "^5.4.3",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/cdk": "^5.0.0-rc0",
    "@angular/cli": "^1.6.1",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.0.0-rc0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@compodoc/compodoc": "^1.0.0-beta.10",
    "@types/googlemaps": "^3.29.2",
    "@types/jest": "^19.2.3",
    "@types/node": "~6.0.60",
    "angular-in-memory-web-api": "^0.5.2",
    "chokidar-cli": "^1.2.0",
    "codelyzer": "^4.0.2",
    "core-js": "^2.4.1",
    "jest": "^22.0.0",
    "jest-preset-angular": "^2.0.2",
    "marked": "^0.3.7",
    "ng-packagr": "^1.6.0",
    "raw-loader": "^0.5.1",
    "rxjs": "^5.4.3",
    "ts-node": "~2.0.0",
    "tslint": "^5.8.0",
    "typescript": "2.4.2",
    "zone.js": "^0.8.4"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
