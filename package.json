    "@angular/core": "7.1.3",
    "@angular/forms": "7.1.3",
    "@angular/http": "7.1.3",
    "@angular/material": "7.1.1",
    "@angular/platform-browser": "7.1.3",
    "@angular/platform-browser-dynamic": "7.1.3",
    "@angular/router": "7.1.3",
    "@angular/service-worker": "7.1.3",
    "@bazel/bazel": "0.21.0",
    "@bazel/ibazel": "0.9.0",
    "@bazel/karma": "0.22.1",
    "@bazel/typescript": "0.22.1",
    "@compodoc/compodoc": "^1.0.0-beta.10",
    "@types/googlemaps": "^3.29.2",
    "@types/jasmine": "^2.8.11",
    "@types/jest": "^19.2.3",
    "angular-playground": "^5.3.0",
    "chokidar-cli": "^1.2.0",
    "codelyzer": "^4.5.0",
    "core-js": "^2.4.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^0.14.3",
    "jasmine": "^3.3.0",
    "jasmine-core": "^3.3.0",
    "jest": "^22.0.0",
    "jest-preset-angular": "^2.0.2",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.4.0",
    "marked": "^0.3.7",
    "ng-packagr": "^4.4.5",
    "ngx-currency": "^1.5.0",
    "prettier": "^1.12.1",
    "raw-loader": "^0.5.1",
    "rxjs": "^6.3.3",
    "sonarqube-scanner-node": "^0.0.7",
    "stylelint": "^9.6.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "ts-node": "~2.0.0",
    "tsickle": ">=0.29.0",
    "tslint": "^5.11.0",
    "typescript": "3.1.6",
    "webpack": "^4.20.2",
    "webpack-dev-server": "^3.1.9",
    "zone.js": "^0.8.26",
    "sass": "^1.16.1",
    "@angular/bazel": "7.1.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@angular/bazel": "7.1.3",
    "autoprefixer": "^9.4.2",
    "browserslist": "^4.3.5",
    "tslib": "1.9.3"
  }
