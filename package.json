{
  "name": "ignite-design-system",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng-packagr -p package.json",
    "build:watch": "chokidar 'src/**/*.ts' -c './bin/build' --initial",
    "package": "tar cvf $npm_package_name-$npm_package_version.tgz manifest-* Staticfile dist",
    "sonar": "echo Publishing to sonar for branch: $SONARQUBE_BRANCH && sonarqube-scanner-node -Dsonar.branch=$SONARQUBE_BRANCH",
    "lint": "tslint --project tsconfig.json src/**/*.ts && ng lint",
    "prettier": "prettier --single-quote --trailing-comma es5 --print-width 100 --write 'src/**/*.{js,ts}' --list-different",
    "precommit": "npm run prettier && npm run lint",
    "test": "jest --coverage --json --outputFile=test/jest-output.json",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --coverage --json --outputFile=test/jest-output.json && npm run push-to-playground-service && npm run sonar",
    "ci:test": "npm run test:ci",
    "ci:package": "npm run build && npm prune --production && npm run package",
    "push-coverage": "echo 'starting coverage push...' && curl -X POST https://playground-service.apps.mia.ulti.io/v1/coverage -d @coverage/coverage-summary.json --header 'Content-Type: application/json'",
    "push-jest-build": "echo 'starting jest build push...' && curl -X POST https://playground-service.apps.mia.ulti.io/v1/jestoutput -d @test/jest-output.json --header 'Content-Type: application/json'",
    "push-to-playground-service": "npm run push-coverage && npm run push-jest-build",
    "playground": "angular-playground",
    "playground:build": "angular-playground --build",
    "update-snapshots": "jest --updateSnapshot"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest.ts",
    "moduleNameMapper": null,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/index.ts",
      "<rootDir>/src/jest-global-mocks.ts",
      "<rootDir>/src/jest.ts",
      "<rootDir>/src/tsconfig.spec.json",
      "<rootDir>/test/*"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "ngPackage": {
    "lib": {
      "entryFile": "./src/index.ts",
      "umdModuleIds": {
        "rxjs": "rxjs"
      },
      "languageLevel": [
        "dom",
        "es2017"
      ],
      "externals": {
        "@angular/material": "ng.material",
        "rxjs": "Rx",
        "rxjs/operators": "Rx.Observable.prototype"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "http://devgit.dev.us.corp:7990/projects/NUI/repos/ignite-design-system"
  },
  "publishConfig": {
    "registry": "http://artifactory.mia.ucloud.int/artifactory/api/npm/npm-local"
  },
  "author": {
    "name": "Derek Stobbe",
    "email": "derek_stobbe@ultimatesoftware.com"
  },
  "keywords": [
    "angular"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "http://devgit.dev.us.corp:7990/projects/NUI/repos/ignite-design-system/issues"
  },
  "dependencies": {},
  "peerDependencies": {
    "ignite-common": "^0.13.9",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular-devkit/core": "^0.6.8",
    "@angular/animations": "^6.1.4",
    "@angular/cdk": "^6.4.6",
    "@angular/cli": "^6.1.4",
    "@angular/common": "^6.1.4",
    "@angular/compiler": "^6.1.4",
    "@angular/compiler-cli": "^6.1.4",
    "@angular/core": "^6.1.4",
    "@angular/forms": "^6.1.4",
    "@angular/http": "^6.1.4",
    "@angular/material": "^6.4.6",
    "@angular/platform-browser": "^6.1.4",
    "@angular/platform-browser-dynamic": "^6.1.4",
    "@angular/router": "^6.1.4",
    "@angular/service-worker": "^6.1.4",
    "@compodoc/compodoc": "^1.0.0-beta.10",
    "@types/googlemaps": "^3.29.2",
    "@types/jest": "^19.2.3",
    "@types/node": "^6.0.114",
    "angular-playground": "^4.0.0",
    "chokidar-cli": "^1.2.0",
    "codelyzer": "^4.0.2",
    "core-js": "^2.4.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "husky": "^0.14.3",
    "ignite-common": "^0.13.9",
    "jest": "^22.0.0",
    "jest-preset-angular": "^2.0.2",
    "marked": "^0.3.7",
    "ng-packagr": "^2.4.0",
    "prettier": "^1.12.1",
    "raw-loader": "^0.5.1",
    "rxjs": "^6.0.0",
    "sonarqube-scanner-node": "^0.0.7",
    "ts-node": "~2.0.0",
    "tslint": "^5.8.0",
    "typescript": "2.9.2",
    "webpack": "^2.5.1",
    "zone.js": "^0.8.26"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
