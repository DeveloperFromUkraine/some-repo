{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "ignite-design-system"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "www",
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "tsconfig": "../tsconfig.json"
    },
    {
      "name": "playground",
      "root": "src",
      "outDir": "demo",
      "assets": [],
      "index": "index.html",
      "main": "main.playground.ts",
      "polyfills": "polyfills.ts",
      "tsconfig": "../tsconfig.json",
      "serviceWorker": true
    }
  ],
  "lint": [
    {
      "project": "tsconfig.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "defaults": {
    "styleExt": "scss",
    "class": {
      "spec": false
    },
    "component": {
      "spec": false,
      "inlineStyle": true,
      "inlineTemplate": true
    },
    "directive": {
      "spec": false
    },
    "guard": {
      "spec": false
    },
    "module": {
      "spec": false
    },
    "pipe": {
      "spec": false
    },
    "service": {
      "spec": false
    }
  }
}
